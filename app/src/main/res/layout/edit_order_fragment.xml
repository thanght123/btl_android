<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:src="@drawable/edit_button"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:background="#f0dcd5"
            android:textColor="#e60e02"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:text="QUẢN LÝ SỬA MÓN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="Nhập số bàn và chọn món ăn bên dưới"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="Số bàn:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <EditText
            android:layout_marginLeft="5dp"
            android:id="@+id/so_ban"
            android:textSize="20dp"
            android:hint="Số bàn từ 1 đến 20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </EditText>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#ebae34"

            android:layout_marginLeft="40dp"
            android:text="Tìm bàn"
            android:id="@+id/search"
           />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/danh_sach_mon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="#ebae34"

        android:text="Cập nhật đặt món"/>
</LinearLayout>